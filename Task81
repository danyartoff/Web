<script>
function politicsFunction() {
	document.getElementById('id').innerHTML="Trump visited UK"
	document.getElementById('content').
	    innerHTML="Trump started his foreign tour by visiting UK"
}
function sportFunction() {
	document.getElementById('id').innerHTML="Messi scored 5 goals"
	document.getElementById('content').
	    innerHTML="Messi scored 5 goals in last match and became top-scorer of the league"
}
function bussinessFunction() {
	document.getElementById('id').innerHTML="Dow Jones index has fallen"
	document.getElementById('content').
	    innerHTML="Dow Jones index has fallen, because of prices for petrol"
}
